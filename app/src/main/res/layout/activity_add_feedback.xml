                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="3px"-->
                        <!--android:layout_margin="6dp"-->
                        <!--android:background="@color/monsoon" />-->
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_padding"
                    android:padding="5dp"
                    android:background="@color/light"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inaccurate address could cause delays in attending to your case." />

                </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|left"
                            android:paddingBottom="14dp"
                            android:src="@mipmap/location_arrow" />


                        <!-- Location -->
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_spacing">

                            <EditText
                                android:id="@+id/location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint=" Where did you see it?"
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:maxLines="3"
                                android:paddingLeft="36dp"
                                android:paddingRight="36dp"
                                android:textSize="@dimen/text_size" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/location_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:paddingRight="4dp"
                            android:paddingBottom="8dp"
                            android:text="X"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </FrameLayout>


                    <!-- date / time -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/control_spacing">

                                    <EditText
                                        android:id="@+id/date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="On Which Day?"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_size" />
                                </android.support.design.widget.TextInputLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="bottom|right"
                                    android:paddingBottom="14dp"
                                    android:src="@mipmap/ic_calendar" />

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/control_spacing">

                                    <EditText
                                        android:id="@+id/time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="At What Time"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_size" />
                                </android.support.design.widget.TextInputLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="bottom|right"
                                    android:paddingBottom="14dp"
                                    android:src="@mipmap/ic_clock" />

                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/control_spacing">

                                <EditText
                                    android:id="@+id/block"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Block"
                                    android:singleLine="true"
                                    android:textSize="@dimen/text_size" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[61, 63, .., 71, 73]" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/control_spacing"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/storey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Storey + Unit Number"
                                    android:singleLine="true"
                                    android:textSize="@dimen/text_size" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[0101, 0109, B1, ...]" />
                        </LinearLayout>


