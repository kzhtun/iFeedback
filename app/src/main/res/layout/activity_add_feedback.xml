<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/iron"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <!--Picture Layout-->

            <!--Add FeedBack-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_margin="@dimen/main_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/main_padding"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="14dp"
                        android:text="Photos Upload"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/base" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Photo 1" />


                            <ImageView
                                android:id="@+id/photo_1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/photo_height"
                                android:layout_weight="1"
                                android:background="@color/light"
                                android:clickable="true"
                                android:src="@mipmap/ic_camera_alt_black_48dp" />


                            <Button
                                android:id="@+id/photo1_delete"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="top|right"
                                android:background="@color/delete_background"
                                android:text="X"
                                android:textColor="@color/red" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/main_padding"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Photo 2" />


                            <ImageView
                                android:id="@+id/photo_2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/photo_height"
                                android:layout_weight="1"
                                android:background="@color/light"
                                android:clickable="true"
                                android:src="@mipmap/ic_camera_alt_black_48dp" />


                            <Button
                                android:id="@+id/photo2_delete"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="top|right"
                                android:background="@color/delete_background"
                                android:text="X"
                                android:textColor="@color/red" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/main_padding"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="Photo 3" />


                            <ImageView
                                android:id="@+id/photo_3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/photo_height"
                                android:layout_weight="1"
                                android:background="@color/light"
                                android:clickable="true"
                                android:src="@mipmap/ic_camera_alt_black_48dp" />


                            <Button
                                android:id="@+id/photo3_delete"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="top|right"
                                android:background="@color/delete_background"
                                android:text="X"
                                android:textColor="@color/red" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/main_padding"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_spacing">

                            <EditText
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Title"
                                android:singleLine="true"
                                android:textSize="@dimen/text_size" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/title_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:paddingRight="4dp"
                            android:paddingBottom="8dp"
                            android:text="X"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Category"
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/spinner_background" />

                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="3px"-->
                        <!--android:layout_margin="6dp"-->
                        <!--android:background="@color/monsoon" />-->
                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_spacing">

                            <EditText
                                android:id="@+id/remarks"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:gravity="top"
                                android:hint="Remarks"
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:maxLines="3"
                                android:textSize="@dimen/text_size" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/remarks_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:paddingRight="4dp"
                            android:paddingBottom="8dp"
                            android:text="X"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <!-- Submit this feedback to -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Submit this feedback to"
                            android:textColor="@color/jumbo"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/source"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/spinner_background"
                            android:paddingBottom="4dp" />

